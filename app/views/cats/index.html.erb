<div class="col-md-12">
  <h1 class="welcome-title col-md-offset-3 col-md-6">Welcome to<br>CAT CAFE!</h1>
</div>

<div class="cats col-md-12">

<%= render partial: "partials/flash" %>

<% @cats.each do |c| %>
      <div class="cat col-xs-12 col-sm-12 col-md-3 col-lg-3">
        <div class="small-circle">
          <a href="/cats/<%= c.id %>"><img src="<%= c.img.gsub("_b", "_m") %>"></a>
        </div>
        <h2><%= c.name %></h2>
      </div>
<% end %>
</div>
